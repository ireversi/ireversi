{
  "name": "ireversi",
  "version": "1.1.0",
  "description": "Infinite Reversi",
  "repository": "https://github.com/ireversi/ireversi.git",
  "author": "m-mitsuhide",
  "license": "MIT",
  "private": true,
  "engines": {
    "node": ">=10.13.0"
  },
  "scripts": {
    "start": "node api/src/server.js",
    "dev": "npm-run-all --parallel dev:*",
    "dev:api": "nodemon",
    "dev:web": "nuxt",
    "deploy": "pm2 start api/src/server.js --name api",
    "generate": "nuxt generate",
    "lint": "eslint --ext .js,.vue --ignore-path .gitignore .",
    "lint:fix": "npm run lint -- --fix",
    "test": "npm-run-all --serial test:*",
    "test:api": "jest --config api/jest.config.js --coverage",
    "test:api:watch": "npm run test:api -- --watch",
    "test:web": "jest --runInBand --forceExit",
    "test:web:watch": "npm run test:web -- --watch",
    "coverage": "codecov",
    "ps:restart": "pm2 restart api",
    "ps:stop": "pm2 stop api",
    "ps:delete": "pm2 delete api",
    "ps:list": "pm2 list",
    "ps:log": "pm2 logs",
    "ps:monit": "pm2 monit",
    "ps:update": "pm2 update"
  },
  "dependencies": {
    "@nuxtjs/axios": "5.3.6",
    "@nuxtjs/google-analytics": "2.0.2",
    "@nuxtjs/toast": "3.0.2",
    "dotenv": "6.2.0",
    "express": "4.16.4",
    "jsonwebtoken": "8.4.0",
    "klaw-sync": "6.0.0",
    "mongodb-memory-server": "3.0.0",
    "mongoose": "5.4.5",
    "nuxt": "2.3.4",
    "pm2": "3.2.9",
    "random-hash": "4.0.1",
    "swagger-jsdoc": "3.2.6",
    "swagger-ui-express": "4.0.2",
    "universal-url": "2.0.0",
    "vue-touch": "2.0.0-beta.4"
  },
  "devDependencies": {
    "babel-eslint": "10.0.1",
    "babel-preset-env": "1.7.0",
    "chai": "4.2.0",
    "chai-http": "4.2.1",
    "codecov": "3.1.0",
    "eslint": "5.12.1",
    "eslint-config-airbnb-base": "13.1.0",
    "eslint-loader": "2.1.1",
    "eslint-plugin-import": "2.14.0",
    "eslint-plugin-vue": "5.1.0",
    "husky": "1.3.1",
    "jest": "23.6.0",
    "lint-staged": "8.1.0",
    "nodemon": "1.18.9",
    "npm-run-all": "4.1.5"
  },
  "nodemonConfig": {
    "env": {
      "NODE_ENV": "development"
    },
    "ext": "js,yml",
    "ignore": ["api/tests/", "api/jest.config.js"],
    "watch": ["api/"]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,vue}": [
      "eslint -f codeframe"
    ]
  }
}
