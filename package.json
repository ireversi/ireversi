{
  "name": "ireversi",
  "version": "1.0.0",
  "description": "Infinite Reversi",
  "repository": "https://github.com/ireversi/ireversi.git",
  "author": "m-mitsuhide",
  "license": "MIT",
  "private": true,
  "engines": {
    "node": ">=10.13.0"
  },
  "scripts": {
    "start": "cross-env NODE_ENV=production npm run server",
    "server": "node api/src/server.js",
    "dev": "npm-run-all --parallel dev:*",
    "dev:api": "cross-env NODE_ENV=development nodemon --watch api/src --watch api/swagger --ext js,yml --exec \"npm run server\"",
    "dev:client": "nuxt",
    "deploy": "cross-env NODE_ENV=production pm2 start api/src/server.js --name api",
    "restart": "pm2 restart api",
    "stop": "pm2 stop api",
    "delete": "pm2 delete api",
    "update": "pm2 update",
    "logs": "pm2 logs",
    "monit": "pm2 monit",
    "generate": "cross-env NODE_ENV=production nuxt generate",
    "lint": "eslint --ext .js,.vue --ignore-path .gitignore .",
    "lint:fix": "npm run lint -- --fix",
    "test": "npm-run-all --serial test:*",
    "test:api": "jest --config api/jest.config.js --coverage",
    "test:api:watch": "npm run test:api -- --watch",
    "test:client": "jest --runInBand",
    "test:client:watch": "npm run test:client -- --watch",
    "coverage": "codecov"
  },
  "dependencies": {
    "@nuxtjs/axios": "^5.0.0",
    "@nuxtjs/google-analytics": "^2.0.2",
    "@nuxtjs/toast": "^3.0.1",
    "dotenv": "^6.0.0",
    "element-ui": "^2.2.1",
    "express": "^4.16.3",
    "jsonwebtoken": "^8.3.0",
    "klaw-sync": "^6.0.0",
    "mongodb-memory-server": "^2.7.0",
    "mongoose": "^5.3.9",
    "nuxt": "2.3.4",
    "pm2": "^3.2.2",
    "random-hash": "^4.0.1",
    "swagger-jsdoc": "^3.0.2",
    "swagger-ui-express": "^4.0.1",
    "universal-url": "^1.0.1",
    "vue-touch": "^2.0.0-beta.4"
  },
  "devDependencies": {
    "babel-eslint": "^10.0.1",
    "babel-preset-env": "^1.7.0",
    "chai": "^4.1.2",
    "chai-http": "^4.0.0",
    "codecov": "^3.0.4",
    "cross-env": "^5.2.0",
    "eslint": "^5.4.0",
    "eslint-config-airbnb-base": "^13.1.0",
    "eslint-loader": "^2.0.0",
    "eslint-plugin-import": "^2.14.0",
    "eslint-plugin-vue": "^4.0.0",
    "husky": "^1.1.3",
    "jest": "^23.6.0",
    "lint-staged": "^8.0.4",
    "nodemon": "^1.18.6",
    "npm-run-all": "^4.1.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,vue}": [
      "eslint -f codeframe"
    ]
  }
}
